{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": true,
    "jsx": "react",
    "lib": [
      "DOM"
    ]
  },
  "include": [
    "./declarations/**/*",
    "src/**/*"
  ]
}